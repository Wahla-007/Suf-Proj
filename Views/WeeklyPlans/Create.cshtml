@model mess_management.Models.WeeklyPlan

@{
    ViewData["Title"] = "Create Weekly Plan";
}

<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8fafc;
    }

    .page-hero {
        background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
        border-radius: 20px;
        padding: 2.5rem;
        color: white;
        margin-bottom: 2rem;
        box-shadow: 0 20px 25px -5px rgba(79, 70, 229, 0.2);
        position: relative;
        overflow: hidden;
    }

    .page-hero::after {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 300px;
        height: 300px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
    }

    .page-hero h1 {
        font-weight: 700;
        margin-bottom: 0.5rem;
        position: relative;
        z-index: 1;
    }

    .content-card {
        background: white;
        border-radius: 20px;
        border: 1px solid #f1f5f9;
        box-shadow: 0 10px 30px -5px rgba(0, 0, 0, 0.05);
        overflow: hidden;
    }

    .card-header-custom {
        padding: 1.5rem;
        border-bottom: 2px solid #f1f5f9;
        background: #fafbfc;
    }

    .card-header-custom h5 {
        font-weight: 700;
        color: #1e293b;
        margin: 0;
    }

    .menu-table {
        margin: 0;
    }

    .menu-table thead th {
        background: #f8fafc;
        color: #64748b;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.5px;
        padding: 1rem 1.5rem;
        border-bottom: 2px solid #e2e8f0;
    }

    .menu-table tbody td {
        padding: 1.25rem 1.5rem;
        vertical-align: middle;
        border-bottom: 1px solid #f1f5f9;
    }

    .day-label {
        font-weight: 600;
        color: #1e293b;
        font-size: 0.95rem;
    }

    .form-control {
        border: 1px solid #e2e8f0;
        border-radius: 10px;
        padding: 0.6rem 0.8rem;
        font-size: 0.9rem;
        transition: all 0.2s;
    }

    .form-control:focus {
        border-color: #6366f1;
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
    }

    .input-group-text {
        background-color: #f8fafc;
        border: 1px solid #e2e8f0;
        color: #64748b;
        border-radius: 10px 0 0 10px;
    }

    .btn-primary-custom {
        background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
        color: white;
        border: none;
        border-radius: 12px;
        padding: 0.8rem 2.5rem;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s;
        box-shadow: 0 10px 15px -3px rgba(79, 70, 229, 0.3);
    }

    .btn-primary-custom:hover {
        transform: translateY(-2px);
        box-shadow: 0 15px 25px -5px rgba(79, 70, 229, 0.4);
        color: white;
    }

    .btn-back {
        color: #64748b;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s;
        display: inline-flex;
        align-items: center;
    }

    .btn-back:hover {
        color: #1e293b;
    }

    .meal-section {
        background: #ffffff;
        border: 1px solid #f1f5f9;
        border-radius: 12px;
        padding: 1rem;
        margin-bottom: 0.5rem;
    }

    .meal-icon {
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        margin-bottom: 0.5rem;
    }
</style>

<div class="container-fluid px-4 py-4">
    <!-- Hero Section -->
    <div class="page-hero">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="display-6"><i class="fas fa-plus-circle me-2"></i>Create Weekly Plan</h1>
                <p class="mb-0 opacity-75">Setup a new menu and price list for the upcoming week</p>
            </div>
            <div class="text-end d-none d-md-block">
                <i class="fas fa-utensils fa-4x opacity-25"></i>
            </div>
        </div>
    </div>

    <form asp-action="Create" method="post" id="createForm">
        @Html.AntiForgeryToken()
        
        <!-- Week Info Card -->
        <div class="content-card mb-4">
            <div class="card-header-custom">
                <h5><i class="fas fa-calendar-alt text-primary me-2"></i>Week Information</h5>
            </div>
            <div class="p-4">
                <div class="row">
                    <div class="col-md-4">
                        <label asp-for="WeekStart" class="form-label fw-bold text-muted small">WEEK START DATE (MONDAY)</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-calendar-day"></i></span>
                            <input asp-for="WeekStart" type="date" class="form-control" required />
                        </div>
                        <span asp-validation-for="WeekStart" class="text-danger small"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Menu Table Card -->
        <div class="content-card mb-4">
            <div class="card-header-custom">
                <h5><i class="fas fa-list-alt text-warning me-2"></i>Menu Details & Per-Day Pricing</h5>
            </div>
            <div class="table-responsive">
                <table class="table menu-table border-0">
                    <thead>
                        <tr>
                            <th style="width: 140px;">Day</th>
                            <th>Breakfast</th>
                            <th>Lunch</th>
                            <th>Dinner</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Days.Count; i++)
                        {
                            var dayName = System.Globalization.CultureInfo.InvariantCulture.DateTimeFormat.GetDayName((System.DayOfWeek)Model.Days[i].DayOfWeek);
                            <tr>
                                <td class="ps-4">
                                    <span class="day-label">@dayName</span>
                                    <input type="hidden" name="Days[@i].DayOfWeek" value="@Model.Days[i].DayOfWeek" />
                                </td>
                                
                                <!-- Breakfast -->
                                <td>
                                    <div class="meal-section border-0 p-0">
                                        <div class="input-group mb-2">
                                            <span class="input-group-text border-end-0"><i class="fas fa-mug-hot text-warning"></i></span>
                                            <input name="Days[@i].BreakfastName" class="form-control form-control-sm border-start-0" placeholder="Dish Name" required />
                                        </div>
                                        <div class="input-group">
                                            <span class="input-group-text border-end-0 text-muted small">Rs.</span>
                                            <input name="Days[@i].BreakfastPrice" type="number" step="0.01" class="form-control form-control-sm border-start-0" placeholder="Price" required />
                                        </div>
                                    </div>
                                </td>

                                <!-- Lunch -->
                                <td>
                                    <div class="meal-section border-0 p-0">
                                        <div class="input-group mb-2">
                                            <span class="input-group-text border-end-0"><i class="fas fa-sun text-success"></i></span>
                                            <input name="Days[@i].LunchName" class="form-control form-control-sm border-start-0" placeholder="Dish Name" required />
                                        </div>
                                        <div class="input-group">
                                            <span class="input-group-text border-end-0 text-muted small">Rs.</span>
                                            <input name="Days[@i].LunchPrice" type="number" step="0.01" class="form-control form-control-sm border-start-0" placeholder="Price" required />
                                        </div>
                                    </div>
                                </td>

                                <!-- Dinner -->
                                <td>
                                    <div class="meal-section border-0 p-0">
                                        <div class="input-group mb-2">
                                            <span class="input-group-text border-end-0"><i class="fas fa-moon text-indigo"></i></span>
                                            <input name="Days[@i].DinnerName" class="form-control form-control-sm border-start-0" placeholder="Dish Name" required />
                                        </div>
                                        <div class="input-group">
                                            <span class="input-group-text border-end-0 text-muted small">Rs.</span>
                                            <input name="Days[@i].DinnerPrice" type="number" step="0.01" class="form-control form-control-sm border-start-0" placeholder="Price" required />
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="d-flex justify-content-between align-items-center mb-5">
            <a asp-action="Index" class="btn-back">
                <i class="fas fa-arrow-left me-2"></i>Back to Weekly Plans
            </a>
            <button type="submit" class="btn btn-primary-custom py-3">
                <i class="fas fa-check-circle me-2"></i>Create Weekly Plan
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        // Form submission state
        document.getElementById('createForm').addEventListener('submit', function(e) {
            const btn = this.querySelector('button[type="submit"]');
            btn.innerHTML = '<i class="fas fa-circle-notch fa-spin me-2"></i>Processing...';
            btn.style.opacity = '0.8';
        });
    </script>
}