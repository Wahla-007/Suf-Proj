@model mess_management.Models.WeeklyPlan

@{
    ViewData["Title"] = "Plan Details";
}

<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8fafc;
    }

    .page-hero {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        padding: 2rem;
        color: white;
        margin-bottom: 2rem;
        box-shadow: 0 20px 25px -5px rgba(102, 126, 234, 0.2);
    }

    .page-hero h1 {
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .content-card {
        background: white;
        border-radius: 20px;
        border: 1px solid #f1f5f9;
        box-shadow: 0 10px 30px -5px rgba(0, 0, 0, 0.05);
        overflow: hidden;
    }

    .card-header-custom {
        padding: 1.5rem;
        border-bottom: 2px solid #f1f5f9;
        background: #fafbfc;
    }

    .card-header-custom h5 {
        font-weight: 700;
        color: #1e293b;
        margin: 0;
    }

    .menu-table {
        margin: 0;
    }

    .menu-table thead th {
        background: #f8fafc;
        color: #64748b;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.5px;
        padding: 1rem 1.5rem;
        border-bottom: 2px solid #e2e8f0;
    }

    .menu-table tbody td {
        padding: 1.5rem;
        vertical-align: middle;
        border-bottom: 1px solid #f1f5f9;
    }

    .menu-table tbody tr:last-child td {
        border-bottom: none;
    }

    .day-label {
        font-weight: 600;
        color: #1e293b;
        font-size: 1rem;
    }

    .input-group-text {
        border: 1px solid #e2e8f0;
        background: #f8fafc;
        font-weight: 500;
    }

    .form-control-sm {
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        padding: 0.5rem 0.75rem;
        font-size: 0.875rem;
    }

    .form-control-sm:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .btn-primary-custom {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 12px;
        padding: 0.75rem 2rem;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s;
    }

    .btn-primary-custom:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
    }

    .btn-back {
        color: #64748b;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s;
    }

    .btn-back:hover {
        color: #1e293b;
    }

    .input-group {
        border-radius: 8px;
        overflow: hidden;
    }

    .input-group .form-control-sm {
        border-left: none;
    }

    .input-group .input-group-text {
        border-right: none;
    }
</style>

<div class="container-fluid px-4 py-4">
    <!-- Hero Section -->
    <div class="page-hero">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="display-6"><i class="fas fa-calendar-check me-2"></i>Plan Details & Edit</h1>
                <p class="mb-0 opacity-75">View and update meal names and prices for the week</p>
            </div>
            <div class="text-end d-none d-md-block">
                <i class="fas fa-calendar-week fa-3x opacity-25"></i>
            </div>
        </div>
    </div>

    <form asp-action="Details" asp-route-id="@Model.Id" method="post" id="detailsForm">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        
        <!-- Week Start Date Card -->
        <div class="content-card mb-4">
            <div class="card-header-custom">
                <h5><i class="fas fa-calendar-alt text-primary me-2"></i>Week Information</h5>
            </div>
            <div class="p-4">
                <div class="row">
                    <div class="col-md-4">
                        <label asp-for="WeekStart" class="form-label fw-semibold text-muted small">Start Date</label>
                        <input asp-for="WeekStart" type="date" class="form-control" style="border-radius: 8px; border: 1px solid #e2e8f0;" />
                    </div>
                </div>
            </div>
        </div>

        <!-- Menu Items Card -->
        <div class="content-card mb-4">
            <div class="card-header-custom">
                <h5><i class="fas fa-utensils text-warning me-2"></i>Daily Menu & Pricing</h5>
            </div>
            <div class="table-responsive">
                <table class="table menu-table">
                    <thead>
                        <tr>
                            <th style="width: 120px;">Day</th>
                            <th>Breakfast</th>
                            <th>Lunch</th>
                            <th>Dinner</th>
                        </tr>
                    </thead>
                    <tbody>
@{
    var sortedDays = Model.Days.OrderBy(x => x.DayOfWeek).ToList();
    for (int i = 0; i < sortedDays.Count; i++)
    {
        var day = sortedDays[i];
        var dayName = System.Globalization.CultureInfo.InvariantCulture.DateTimeFormat.GetDayName((System.DayOfWeek)day.DayOfWeek);
        <tr>
            <td>
                <span class="day-label">@dayName</span>
                <input type="hidden" name="Days[@i].Id" value="@day.Id" />
                <input type="hidden" name="Days[@i].DayOfWeek" value="@day.DayOfWeek" />
                <input type="hidden" name="Days[@i].WeeklyPlanId" value="@day.WeeklyPlanId" />
            </td>
            
            <!-- Breakfast -->
            <td>
                <div class="input-group mb-2">
                    <span class="input-group-text">
                        <i class="fas fa-mug-hot text-warning"></i>
                    </span>
                    <input name="Days[@i].BreakfastName" value="@day.BreakfastName" type="text" class="form-control form-control-sm" placeholder="Dish Name" />
                </div>
                <div class="input-group">
                    <span class="input-group-text text-muted">Rs.</span>
                    <input name="Days[@i].BreakfastPrice" value="@day.BreakfastPrice" type="number" step="0.01" class="form-control form-control-sm" placeholder="0.00" />
                </div>
            </td>

            <!-- Lunch -->
            <td>
                <div class="input-group mb-2">
                    <span class="input-group-text">
                        <i class="fas fa-sun text-success"></i>
                    </span>
                    <input name="Days[@i].LunchName" value="@day.LunchName" type="text" class="form-control form-control-sm" placeholder="Dish Name" />
                </div>
                <div class="input-group">
                    <span class="input-group-text text-muted">Rs.</span>
                    <input name="Days[@i].LunchPrice" value="@day.LunchPrice" type="number" step="0.01" class="form-control form-control-sm" placeholder="0.00" />
                </div>
            </td>

            <!-- Dinner -->
            <td>
                <div class="input-group mb-2">
                    <span class="input-group-text">
                        <i class="fas fa-moon text-primary"></i>
                    </span>
                    <input name="Days[@i].DinnerName" value="@day.DinnerName" type="text" class="form-control form-control-sm" placeholder="Dish Name" />
                </div>
                <div class="input-group">
                    <span class="input-group-text text-muted">Rs.</span>
                    <input name="Days[@i].DinnerPrice" value="@day.DinnerPrice" type="number" step="0.01" class="form-control form-control-sm" placeholder="0.00" />
                </div>
            </td>
        </tr>
    }
}
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="d-flex justify-content-between align-items-center">
            <a asp-action="Index" class="btn-back">
                <i class="fas fa-arrow-left me-2"></i>Back to Plans
            </a>
            <button type="submit" class="btn btn-primary-custom">
                <i class="fas fa-save me-2"></i>Save Changes
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        // Add form loading state
        document.getElementById('detailsForm').addEventListener('submit', function(e) {
            const submitBtn = this.querySelector('button[type="submit"]');
            // Change text and show spinner without disabling (safer for some browsers)
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Saving...';
            // Show a simple processing overlay if needed, but let the form submit
        });
    </script>
}