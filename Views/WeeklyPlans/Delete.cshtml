@model mess_management.Models.WeeklyPlan

@{
    ViewData["Title"] = "Delete Plan";
    ViewData["HideBackButton"] = true;
}

<div class="container">
    <div class="card border-danger mt-5">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Delete Weekly Plan?</h3>
        </div>
        <div class="card-body">
            <h5 class="card-title">Are you sure you want to delete this plan?</h5>
            <p class="card-text text-danger">This action cannot be undone.</p>
            
            <dl class="row mt-4">
                <dt class="col-sm-3">Week Start</dt>
                <dd class="col-sm-9">@Model.WeekStart.ToShortDateString()</dd>

                <dt class="col-sm-3">Created By</dt>
                <dd class="col-sm-9">@(Model.CreatedBy?.FullName ?? Model.CreatedBy?.Email ?? "Admin")</dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Delete Forever
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>
