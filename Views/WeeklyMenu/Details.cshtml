@model mess_management.Models.WeeklyMenu

@{
    ViewData["Title"] = "Details";
    ViewData["HideBackButton"] = true;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg rounded-3 overflow-hidden">
                <div class="card-header bg-primary text-white p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="mb-0 fw-bold"><i class="fas fa-info-circle me-2"></i> Weekly Menu Details</h3>
                            <p class="mb-0 text-white-50 small">View rate configurations for this week</p>
                        </div>
                        <div class="bg-white bg-opacity-25 rounded-circle p-3">
                            <i class="fas fa-utensils fa-2x"></i>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4 p-md-5">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="detail-item mb-4">
                                <label class="text-muted small fw-bold text-uppercase mb-1 d-block">
                                    <i class="fas fa-calendar-alt me-1 text-primary"></i> Week Start Date
                                </label>
                                <div class="h5 mb-0 fw-bold">@(Model.WeekStartDate?.ToString("MMM dd, yyyy") ?? "N/A")</div>
                            </div>

                            <div class="detail-item mb-4">
                                <label class="text-muted small fw-bold text-uppercase mb-1 d-block">
                                    <i class="fas fa-clock me-1 text-info"></i> Created At
                                </label>
                                <div class="text-dark">@(Model.CreatedAt?.ToString("g") ?? "N/A")</div>
                            </div>

                            <div class="detail-item">
                                <label class="text-muted small fw-bold text-uppercase mb-1 d-block">
                                    <i class="fas fa-user-edit me-1 text-success"></i> Created By
                                </label>
                                <div class="text-dark">@Model.CreatedBy?.FullName (@Model.CreatedBy?.Email)</div>
                            </div>
                        </div>

                        <div class="col-md-6 border-start-md">
                            <h5 class="text-secondary border-bottom pb-2 mb-3">Meal Rates</h5>
                            
                            <div class="rate-card p-3 mb-3 bg-light rounded-3 d-flex align-items-center">
                                <div class="bg-warning bg-opacity-25 text-warning rounded-circle p-2 me-3">
                                    <i class="fas fa-coffee"></i>
                                </div>
                                <div>
                                    <label class="text-muted small d-block">Breakfast</label>
                                    <span class="h5 mb-0 fw-bold text-dark">Rs. @(Model.BreakfastRate?.ToString("N2") ?? "0.00")</span>
                                </div>
                            </div>

                            <div class="rate-card p-3 mb-3 bg-light rounded-3 d-flex align-items-center">
                                <div class="bg-danger bg-opacity-25 text-danger rounded-circle p-2 me-3">
                                    <i class="fas fa-hamburger"></i>
                                </div>
                                <div>
                                    <label class="text-muted small d-block">Lunch</label>
                                    <span class="h5 mb-0 fw-bold text-dark">Rs. @(Model.LunchRate?.ToString("N2") ?? "0.00")</span>
                                </div>
                            </div>

                            <div class="rate-card p-3 bg-light rounded-3 d-flex align-items-center">
                                <div class="bg-success bg-opacity-25 text-success rounded-circle p-2 me-3">
                                    <i class="fas fa-utensils"></i>
                                </div>
                                <div>
                                    <label class="text-muted small d-block">Dinner</label>
                                    <span class="h5 mb-0 fw-bold text-dark">Rs. @(Model.DinnerRate?.ToString("N2") ?? "0.00")</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                            <i class="fas fa-list me-1"></i> Back to List
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary px-5 shadow-sm fw-bold">
                            <i class="fas fa-edit me-1"></i> Edit Menu
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .border-start-md {
        border-left: 1px solid #dee2e6;
    }
    .rate-card {
        transition: transform 0.2s ease;
    }
    .rate-card:hover {
        transform: translateX(5px);
        background-color: #f1f3f5 !important;
    }
    @@media (max-width: 768px) {
        .border-start-md {
            border-left: none;
            border-top: 1px solid #dee2e6;
            margin-top: 1.5rem;
            padding-top: 1.5rem;
        }
    }
</style>

