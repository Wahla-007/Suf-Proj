@model IEnumerable<mess_management.Models.TeacherAttendance>

@{
    ViewData["Title"] = "Manage Disputes";
    ViewData["ContainerClass"] = "container-fluid";
    ViewData["HideBackButton"] = true;
}

<div class="container py-4">
    <!-- Header Area -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-0 fw-bold text-dark"><i class="fas fa-exclamation-triangle text-danger me-2"></i>Pending Disputes</h1>
            <p class="text-muted mb-0">Review and resolve attendance disputes raised by teachers.</p>
        </div>
        <div>
            <span class="badge bg-danger fs-6 px-3 py-2 rounded-pill shadow-sm">
                @Model.Count() Active Disputes
            </span>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="card border-0 shadow-sm rounded-4 text-center p-5">
            <div class="py-5">
                <div class="display-1 text-muted opacity-25 mb-4">
                    <i class="fas fa-check-circle"></i>
                </div>
                <h3 class="fw-bold text-dark">No Pending Disputes</h3>
                <p class="text-muted">All caught up! There are no disputes waiting for review.</p>
                <a asp-action="Index" class="btn btn-outline-primary mt-3 px-4 rounded-pill">
                    <i class="fas fa-list me-2"></i>View All Logs
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-12">
                    <div class="card border-0 shadow-sm rounded-4 overflow-hidden dispute-card">
                        <div class="card-body p-0">
                            <div class="row g-0">
                                <div class="col-md-3 bg-light p-4 d-flex flex-column justify-content-center border-end">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="rounded-circle bg-white border shadow-sm d-flex align-items-center justify-content-center me-3" style="width: 48px; height: 48px;">
                                            <i class="fas fa-user text-primary fa-lg"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-0 fw-bold">@(item.Teacher?.FullName ?? "Unknown User")</h6>
                                            <small class="text-muted">@(item.Teacher?.Email ?? "-")</small>
                                        </div>
                                    </div>
                                    <div class="text-muted small mb-1"><i class="fas fa-calendar-day me-2"></i>@item.Date?.ToString("dd MMM yyyy")</div>
                                    <div class="d-flex gap-1 mt-2">
                                        <span class="badge @(item.Breakfast ? "bg-success" : "bg-light text-muted border")">B</span>
                                        <span class="badge @(item.Lunch ? "bg-success" : "bg-light text-muted border")">L</span>
                                        <span class="badge @(item.Dinner ? "bg-success" : "bg-light text-muted border")">D</span>
                                    </div>
                                </div>
                                <div class="col-md-6 p-4">
                                    <h6 class="text-danger fw-bold mb-2"><i class="fas fa-comment-dots me-2"></i>Teacher's Reason:</h6>
                                    <div class="p-3 bg-white border rounded-3 shadow-inner" style="min-height: 80px;">
                                        <p class="mb-0 text-dark italic">"@item.DisputeReason"</p>
                                    </div>
                                    <small class="text-muted d-block mt-2">Marked By: @item.MarkedBy</small>
                                </div>
                                <div class="col-md-3 p-4 bg-white d-flex flex-column justify-content-center gap-2">
                                    <form asp-action="ApproveDispute" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-success w-100 rounded-pill py-2 shadow-sm">
                                            <i class="fas fa-check-circle me-2"></i>Approve (Cancel Record)
                                        </button>
                                    </form>
                                    <button type="button" class="btn btn-danger w-100 rounded-pill py-2 shadow-sm" data-bs-toggle="modal" data-bs-target="#rejectModal-@item.Id">
                                        <i class="fas fa-times-circle me-2"></i>Reject (Uphold Record)
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Reject Modal -->
                <div class="modal fade" id="rejectModal-@item.Id" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content border-0 shadow-lg rounded-4">
                            <form asp-action="RejectDispute" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.Id" />
                                <div class="modal-header bg-danger text-white border-0 py-3">
                                    <h5 class="modal-title fw-bold"><i class="fas fa-times-circle me-2"></i>Reject Dispute</h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body p-4 text-start">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Provide Reason for Rejection:</label>
                                        <textarea class="form-control rounded-3" name="adminNote" rows="3" required placeholder="Tell the teacher why this record is being upheld..."></textarea>
                                    </div>
                                    <p class="text-muted small mb-0"><i class="fas fa-info-circle me-1"></i> This will mark the record as verified and chargers will remain active.</p>
                                </div>
                                <div class="modal-footer bg-light border-0 rounded-bottom-4">
                                    <button type="button" class="btn btn-secondary px-4 rounded-pill" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-danger px-4 rounded-pill">Reject & Uphold</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-link text-muted text-decoration-none">
            <i class="fas fa-arrow-left me-2"></i>Back to Full Attendance Logs
        </a>
    </div>
</div>

<style>
    .rounded-4 { border-radius: 1rem !important; }
    .shadow-inner { box-shadow: inset 0 2px 4px 0 rgba(0, 0, 0, 0.06); }
    
    .dispute-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border: 1px solid #f1f5f9;
        background: #fdfdfd;
    }
    
    .dispute-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 1rem 3rem rgba(0,0,0,0.1) !important;
        border-color: #fee2e2;
    }

    .italic { font-style: italic; }
</style>
