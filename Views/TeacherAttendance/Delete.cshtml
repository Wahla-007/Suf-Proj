@model mess_management.Models.TeacherAttendance

@{
    ViewData["Title"] = "Delete";
    ViewData["HideBackButton"] = true;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-danger text-white py-3 text-center">
                    <i class="fas fa-exclamation-triangle fa-3x mb-2 opacity-75"></i>
                    <h4 class="fw-bold mb-0">Delete Record</h4>
                    <p class="mb-0 small opacity-75">This action cannot be undone.</p>
                </div>
                
                <div class="card-body p-4 text-center">
                    <h5 class="mb-3 text-dark">Are you sure you want to delete this?</h5>
                    
                    <div class="card bg-light border-0 rounded-3 mb-4 text-start">
                        <div class="card-body">
                            <label class="small text-uppercase text-muted fw-bold mb-2">Record Summary</label>
                            
                            <div class="d-flex align-items-center mb-3">
                                <div class="avatar-sm rounded-circle bg-white text-primary shadow-sm d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div>
                                    <div class="fw-bold text-dark">@(Model.Teacher?.FullName ?? "Unknown User")</div>
                                    <small class="text-muted">@Model.Teacher?.Email</small>
                                </div>
                            </div>

                            <div class="row g-2">
                                <div class="col-6">
                                    <div class="p-2 bg-white rounded border">
                                        <small class="d-block text-muted x-small">Date</small>
                                        <div class="fw-bold text-dark">@Model.Date?.ToString("dd MMM yyyy")</div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="p-2 bg-white rounded border">
                                        <small class="d-block text-muted x-small">Meals</small>
                                        <div>
                                            @if (Model.Breakfast == true) { <span class="badge bg-success-subtle text-success border border-success me-1">B</span> }
                                            @if (Model.Lunch == true) { <span class="badge bg-success-subtle text-success border border-success me-1">L</span> }
                                            @if (Model.Dinner == true) { <span class="badge bg-success-subtle text-success border border-success">D</span> }
                                            @if (Model.Breakfast != true && Model.Lunch != true && Model.Dinner != true) { <span class="text-muted small">-</span> }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" class="d-grid gap-2">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger btn-lg rounded-pill shadow-sm">
                            <i class="fas fa-trash-alt me-2"></i> Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
