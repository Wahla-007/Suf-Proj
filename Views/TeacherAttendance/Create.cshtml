@model mess_management.Models.TeacherAttendance

@{
    ViewData["Title"] = "Create";
    ViewData["HideBackButton"] = true;
}

<div class="row justify-content-center">
    <div class="col-md-7 col-lg-6">
        <div class="card shadow-sm border-0 mt-4">
            <div class="card-header bg-info text-white py-3">
                <h4 class="mb-0"><i class="fas fa-calendar-check me-2"></i> Mark Teacher Attendance</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="row mb-3">
                        <div class="col-md-7">
                            <div class="form-group">
                                <label asp-for="TeacherId" class="form-label fw-bold">Teacher</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-user-tie"></i></span>
                                    <select asp-for="TeacherId" class="form-select" asp-items="ViewBag.TeacherId"></select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <label asp-for="Date" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-calendar-day"></i></span>
                                    <input asp-for="Date" class="form-control" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                </div>
                                <span asp-validation-for="Date" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <div class="card bg-light border-0 mb-4">
                        <div class="card-body py-3">
                            <h6 class="card-subtitle mb-3 text-muted fw-bold text-uppercase small">Meal Attendance</h6>
                            <div class="d-flex justify-content-between">
                                <div class="form-check form-switch card-text">
                                    <input asp-for="Breakfast" class="form-check-input" type="checkbox" role="switch">
                                    <label asp-for="Breakfast" class="form-check-label fw-bold">Breakfast</label>
                                </div>
                                <div class="form-check form-switch card-text">
                                    <input asp-for="Lunch" class="form-check-input" type="checkbox" role="switch" checked>
                                    <label asp-for="Lunch" class="form-check-label fw-bold">Lunch</label>
                                </div>
                                <div class="form-check form-switch card-text">
                                    <input asp-for="Dinner" class="form-check-input" type="checkbox" role="switch">
                                    <label asp-for="Dinner" class="form-check-label fw-bold">Dinner</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="VerificationNote" class="form-label fw-bold">Note / Remark</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fas fa-comment-alt"></i></span>
                            <input asp-for="VerificationNote" class="form-control" placeholder="Optional remark..." />
                        </div>
                        <span asp-validation-for="VerificationNote" class="text-danger small"></span>
                    </div>

                    @* System fields usually hidden or prepopulated in Create *@
                    <input type="hidden" asp-for="VerifiedAt" />

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <button type="submit" class="btn btn-info text-white px-4">
                            <i class="fas fa-check-circle me-2"></i> Save Attendance
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

