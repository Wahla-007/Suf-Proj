@model IEnumerable<mess_management.Models.TeacherAttendance>

@{
    ViewData["Title"] = "Attendance Management";
    ViewData["ContainerClass"] = "container-fluid";
    ViewData["HideBackButton"] = true;
}

<div class="container-fluid py-4">
    <!-- Header Area -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-0 fw-bold text-dark"><i class="fas fa-clipboard-check text-primary me-2"></i>Attendance Logs</h1>
            <p class="text-muted mb-0">Monitor and verify teacher meal consumption across the system.</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-success shadow-sm">
                <i class="fas fa-plus-circle me-1"></i> Mark New
            </a>
            <button class="btn btn-outline-primary shadow-sm" type="button" data-bs-toggle="collapse" data-bs-target="#filterCard">
                <i class="fas fa-filter me-1"></i> Toggle Filters
            </button>
        </div>
    </div>

    <!-- Filters Panel -->
    <div id="filterCard" class="collapse mb-4 @(ViewData["TeacherSearch"] != null || ViewData["StartDate"] != null || ViewData["EndDate"] != null || ViewData["Status"] != null ? "show" : "")">
        <div class="card border-0 shadow-sm rounded-4">
            <div class="card-body p-4">
                <form method="get" asp-action="Index">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label small fw-bold">Search Teacher</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="fas fa-search text-muted"></i></span>
                                <input type="text" name="teacherSearch" class="form-control border-start-0" placeholder="Name or Email..." value="@ViewData["TeacherSearch"]">
                            </div>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label small fw-bold">Start Date</label>
                            <input type="date" name="startDate" class="form-control" value="@ViewData["StartDate"]">
                        </div>
                        <div class="col-md-2">
                            <label class="form-label small fw-bold">End Date</label>
                            <input type="date" name="endDate" class="form-control" value="@ViewData["EndDate"]">
                        </div>
                        <div class="col-md-2">
                            <label class="form-label small fw-bold">Status</label>
                            <select name="status" class="form-select">
                                <option value="">All Status</option>
                                <option value="true" selected="@(ViewData["Status"] as bool? == true)">Verified</option>
                                <option value="false" selected="@(ViewData["Status"] as bool? == false)">Pending/Rejected</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end gap-2">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-filter me-1"></i> Apply
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-undo"></i>
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Stats Overview (Optional but looks premium) -->
<div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-primary text-white p-3 rounded-4">
                <div class="d-flex justify-content-between">
                    <div>
                        <small class="opacity-75 text-uppercase fw-bold" style="letter-spacing: 0.5px;">Total Logs</small>
                        <h3 class="mb-0 fw-bold display-6">@Model.Count()</h3>
                    </div>
                    <i class="fas fa-database fa-2x opacity-25"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-success text-white p-3 rounded-4">
                <div class="d-flex justify-content-between">
                    <div>
                        <small class="opacity-75 text-uppercase fw-bold" style="letter-spacing: 0.5px;">Verified</small>
                        <h3 class="mb-0 fw-bold display-6">@Model.Count(x => x.IsVerified == true)</h3>
                    </div>
                    <i class="fas fa-check-double fa-2x opacity-25"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-warning text-dark p-3 rounded-4">
                <div class="d-flex justify-content-between">
                    <div>
                        <small class="opacity-75 text-uppercase fw-bold" style="letter-spacing: 0.5px;">Pending</small>
                        <h3 class="mb-0 fw-bold display-6">@Model.Count(x => x.IsVerified == null)</h3>
                    </div>
                    <i class="fas fa-clock fa-2x opacity-25"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-danger text-white p-3 rounded-4">
                <div class="d-flex justify-content-between">
                    <div>
                        <small class="opacity-75 text-uppercase fw-bold" style="letter-spacing: 0.5px;">Disputes</small>
                        <h3 class="mb-0 fw-bold display-6">@Model.Count(x => x.DisputeStatus == "Raised")</h3>
                    </div>
                    <i class="fas fa-exclamation-circle fa-2x opacity-25"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Card -->
    <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
        <div class="card-header bg-white py-3 border-bottom d-flex align-items-center justify-content-between">
            <h5 class="mb-0 fw-bold text-dark"><i class="fas fa-list-alt me-2 text-primary"></i>Records List</h5>
            <span class="badge bg-light text-dark border">Showing @Model.Count() entries</span>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary small text-uppercase fw-bold">
                        <tr>
                            <th class="ps-4 py-3" style="min-width: 120px;">Date</th>
                            <th class="py-3" style="min-width: 200px;">Teacher</th>
                            <th class="text-center py-3">Meals</th>
                            <th class="py-3" style="min-width: 150px;">Dispute Status</th>
                            <th class="py-3" style="min-width: 250px;">Admin Remarks</th>
                            <th class="text-end pe-4 py-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="border-top-0">
                        @foreach (var item in Model.OrderByDescending(x => x.Date))
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-bold text-dark">@item.Date?.ToString("dd MMM yyyy")</div>
                                    <small class="text-muted"><i class="fas fa-user-edit me-1"></i>@item.MarkedBy</small>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm rounded-circle bg-primary-subtle text-primary d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                            <span class="fw-bold">@item.Teacher?.FullName?.Substring(0, 1).ToUpper()</span>
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">@(item.Teacher?.FullName ?? "Unknown User")</div>
                                            <small class="text-muted">@(item.Teacher?.Email ?? "-")</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-2">
                                        <span class="badge rounded-pill @(item.Breakfast == true ? "bg-success" : "bg-light text-muted border")" style="width: 30px;">B</span>
                                        <span class="badge rounded-pill @(item.Lunch == true ? "bg-success" : "bg-light text-muted border")" style="width: 30px;">L</span>
                                        <span class="badge rounded-pill @(item.Dinner == true ? "bg-success" : "bg-light text-muted border")" style="width: 30px;">D</span>
                                    </div>
                                </td>
                                <td>
                                    @if (item.DisputeStatus != "None" && !string.IsNullOrEmpty(item.DisputeStatus))
                                    {
                                        <span class="badge rounded-pill @(item.DisputeStatus == "Raised" ? "bg-warning text-dark" : item.DisputeStatus == "Approved" ? "bg-success" : "bg-secondary") px-3 py-2 mb-1">
                                            @item.DisputeStatus
                                        </span>
                                        @if (!string.IsNullOrEmpty(item.DisputeReason))
                                        {
                                            <div class="small text-muted mt-1 fst-italic">
                                                "@item.DisputeReason"
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted small">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.VerificationNote))
                                    {
                                        <div class="p-2 rounded bg-light border-start border-4 border-info small text-dark">
                                            @item.VerificationNote
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">-</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group shadow-sm rounded-pill overflow-hidden">
                                        @if (item.DisputeStatus == "Raised")
                                        {
                                            <form asp-action="ApproveDispute" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-sm btn-success px-3" title="Approve Dispute"><i class="fas fa-check"></i></button>
                                            </form>
                                            <button type="button" class="btn btn-sm btn-danger px-3" data-bs-toggle="modal" data-bs-target="#rejectModal-@item.Id" title="Reject Dispute">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        }
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light text-warning px-3 border-start" title="Edit"><i class="fas fa-pen"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-light text-danger px-3 border-start" title="Delete"><i class="fas fa-trash-alt"></i></a>
                                    </div>

                                    @if (item.DisputeStatus == "Raised")
                                    {
                                        <div class="modal fade" id="rejectModal-@item.Id" tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered text-start">
                                                <div class="modal-content border-0 shadow-lg rounded-4">
                                                    <form asp-action="RejectDispute" method="post">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <div class="modal-header bg-danger text-white border-0">
                                                            <h5 class="modal-title fw-bold"><i class="fas fa-times-circle me-2"></i>Reject Dispute</h5>
                                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <div class="modal-body p-4">
                                                            <div class="mb-3">
                                                                <label class="form-label fw-bold small text-uppercase">Reason for Rejection</label>
                                                                <textarea class="form-control bg-light" name="adminNote" rows="3" required placeholder="Reason..."></textarea>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer border-0 pt-0">
                                                            <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                                                            <button type="submit" class="btn btn-danger rounded-pill px-4">Reject</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary px-4">
        <i class="fas fa-arrow-left me-2"></i> Back to Dashboard
    </a>
</div>

<style>
    :root {
        --bs-success-subtle: #d1fae5;
        --bs-danger-subtle: #fee2e2;
        --bs-warning-subtle: #fef3c7;
    }
    
    .bg-success-subtle { background-color: var(--bs-success-subtle) !important; }
    .bg-danger-subtle { background-color: var(--bs-danger-subtle) !important; }
    .bg-warning-subtle { background-color: var(--bs-warning-subtle) !important; }
    
    .x-small { font-size: 0.75rem; }
    .rounded-4 { border-radius: 1rem !important; }
    
    .table-responsive {
        border-radius: 1rem;
    }
    
    .table thead th {
        font-weight: 600;
        background-color: #f8f9fa;
        border-bottom: 1px solid #eee;
    }

    .btn-group .btn {
        padding: 0.375rem 0.75rem;
    }
    
    /* Smooth hover transitions */
    .table tbody tr {
        transition: background-color 0.2s;
    }
    
    .card { transition: transform 0.2s ease, box-shadow 0.2s ease; }
    .card:hover { transform: translateY(-2px); box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important; }
</style>
