@{
    ViewData["Title"] = "Generate Monthly Bills";
}

<h1>Generate Monthly Bills</h1>

<form asp-action="Generate" method="post">
    <div class="form-group">
        <label>Year</label>
        <input name="year" type="number" value="@ViewData["Year"]" class="form-control" />
    </div>
    <div class="form-group">
        <label>Month</label>
        <input name="month" type="number" value="@ViewData["Month"]" class="form-control" min="1" max="12" />
    </div>
    <button type="submit" class="btn btn-primary">Generate</button>
</form>