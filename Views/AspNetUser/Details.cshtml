@model mess_management.Models.AspNetUser

@{
    ViewData["Title"] = "Details";
    ViewData["HideBackButton"] = true;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 text-primary fw-bold"><i class="fas fa-id-card me-2"></i> User Profile</h5>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm rounded-pill">
                        <i class="fas fa-arrow-left me-1"></i> Back to List
                    </a>
                </div>
                <div class="card-body p-4 text-center">
                    
                    <div class="mb-4">
                        <div class="avatar-circle bg-light text-primary mx-auto d-flex align-items-center justify-content-center rounded-circle shadow-sm" style="width: 100px; height: 100px; font-size: 3rem;">
                            <i class="fas fa-user"></i>
                        </div>
                        <h3 class="mt-3 fw-bold text-dark">@Html.DisplayFor(model => model.FullName)</h3>
                        <div class="text-muted">
                            @if (Model.IsAdmin == true)
                            {
                                <span class="badge bg-primary-subtle text-primary rounded-pill px-3 py-2">
                                    <i class="fas fa-shield-alt me-1"></i> Administrator
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary-subtle text-secondary rounded-pill px-3 py-2">
                                    <i class="fas fa-user-tag me-1"></i> User
                                </span>
                            }
                        </div>
                    </div>

                    <div class="row text-start g-3 mt-2">
                        <div class="col-12">
                            <div class="p-3 bg-light rounded-3">
                                <label class="small text-muted text-uppercase fw-bold mb-1">Email Address</label>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-envelope text-primary me-2"></i>
                                    <span class="fs-5 text-dark">@Html.DisplayFor(model => model.Email)</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <label class="small text-muted text-uppercase fw-bold mb-1">Joined Date</label>
                                <div class="d-flex align-items-center">
                                    <i class="far fa-calendar-alt text-success me-2"></i>
                                    <span class="text-dark">@Html.DisplayFor(model => model.JoinedDate)</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <label class="small text-muted text-uppercase fw-bold mb-1">Password Status</label>
                                <div class="d-flex align-items-center">
                                    @if (Model.IsPasswordChanged == true)
                                    {
                                        <i class="fas fa-check-circle text-success me-2"></i>
                                        <span class="text-dark">Changed</span>
                                    }
                                    else
                                    {
                                        <i class="fas fa-exclamation-circle text-warning me-2"></i>
                                        <span class="text-dark">Default</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="card-footer bg-light py-3 text-center border-0">
                     <a class="btn btn-warning px-4 rounded-pill shadow-sm" asp-action="Edit" asp-route-id="@Model?.Id">
                         <i class="fas fa-edit me-1"></i> Edit Profile
                     </a>
                </div>
            </div>
        </div>
    </div>
</div>
