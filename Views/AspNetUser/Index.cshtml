@model IEnumerable<mess_management.Models.AspNetUser>

@{
    ViewData["Title"] = "Index";
    ViewData["HideBackButton"] = true;
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h3 class="mb-0 text-primary fw-bold"><i class="fas fa-users me-2"></i> User Management</h3>
        <a asp-action="Create" class="btn btn-primary rounded-pill">
            <i class="fas fa-plus-circle me-1"></i> Create New
        </a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-secondary text-uppercase small fw-bold">
                    <tr>
                        <th class="ps-4">@Html.DisplayNameFor(model => model.FullName)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>@Html.DisplayNameFor(model => model.JoinedDate)</th>
                        <th>Role</th>
                        <th class="text-center">Password</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td class="ps-4">
                            <div class="d-flex align-items-center">
                                <div class="avatar-circle me-3 bg-light text-primary d-flex align-items-center justify-content-center rounded-circle" style="width: 40px; height: 40px;">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div>
                                    <span class="fw-bold text-dark">@Html.DisplayFor(modelItem => item.FullName)</span>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex align-items-center text-muted">
                                <i class="fas fa-envelope me-2 text-primary opacity-75"></i>
                                @Html.DisplayFor(modelItem => item.Email)
                            </div>
                        </td>
                        <td>
                            <div class="d-flex align-items-center text-muted">
                                <i class="far fa-calendar-alt me-2 opacity-75"></i>
                                @Html.DisplayFor(modelItem => item.JoinedDate)
                            </div>
                        </td>
                        <td>
                            @if (item.IsAdmin == true)
                            {
                                <span class="badge bg-primary-subtle text-primary rounded-pill px-3">
                                    <i class="fas fa-shield-alt me-1"></i> Admin
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary-subtle text-secondary rounded-pill px-3">
                                    <i class="fas fa-user-tag me-1"></i> User
                                </span>
                            }
                        </td>
                        <td class="text-center">
                            @if (item.IsPasswordChanged == true)
                            {
                                <i class="fas fa-check-circle text-success" title="Password Changed"></i>
                            }
                            else
                            {
                                <i class="fas fa-minus-circle text-muted opacity-50" title="Default Password"></i>
                            }
                        </td>
                        <td class="text-end pe-4">
                            <div class="btn-group shadow-sm rounded-pill overflow-hidden" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light text-primary border-end" title="Details">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light text-warning border-end" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-light text-danger" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
            }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary px-4">
        <i class="fas fa-arrow-left me-2"></i> Back to Dashboard
    </a>
</div>

