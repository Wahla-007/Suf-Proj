@model mess_management.Models.TeacherAttendance
@{
    ViewData["Title"] = "Raise Dispute";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

<style>
    :root {
        --font-main: 'Plus Jakarta Sans', sans-serif;
        --primary-gradient: linear-gradient(135deg, #ef4444 0%, #b91c1c 100%);
        --glass-bg: rgba(255, 255, 255, 0.95);
        --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    body {
        font-family: var(--font-main);
        background: #f8fafc;
        color: #1e293b;
    }

    .page-container {
        padding-top: 2rem; /* Moved up as requested */
        padding-bottom: 2rem;
    }

    .dispute-card {
        background: white;
        border-radius: 24px;
        border: 1px solid rgba(241, 245, 249, 1);
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05);
        overflow: hidden;
    }

    .card-header-vibrant {
        background: var(--primary-gradient);
        padding: 2rem;
        text-align: center;
        color: white;
    }

    .info-box {
        background: #f1f5f9;
        border-radius: 16px;
        padding: 1.25rem;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .back-btn-wrapper {
        margin-bottom: 1.5rem;
    }

    .btn-modern {
        border-radius: 14px;
        padding: 0.8rem 1.5rem;
        font-weight: 700;
        transition: var(--transition);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .btn-submit {
        background: var(--primary-gradient);
        color: white;
        border: none;
    }

    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px -5px rgba(239, 68, 68, 0.4);
        color: white;
    }

    .btn-cancel {
        background: #f1f5f9;
        color: #475569;
        border: 1px solid #e2e8f0;
    }

    .btn-cancel:hover {
        background: #e2e8f0;
        color: #1e293b;
    }

    .form-control-modern {
        border-radius: 16px;
        border: 2px solid #e2e8f0;
        padding: 1rem;
        transition: var(--transition);
    }

    .form-control-modern:focus {
        border-color: #ef4444;
        box-shadow: 0 0 0 4px rgba(239, 68, 68, 0.1);
    }
</style>

<div class="container page-container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            


            <div class="dispute-card">
                <div class="card-header-vibrant">
                    <h2 class="mb-0 fw-800"><i class="fas fa-circle-exclamation me-2"></i> Raise Dispute</h2>
                </div>
                
                <div class="card-body p-4 p-lg-5">
                    <div class="info-box">
                        <div class="bg-white rounded-3 p-2 text-danger">
                            <i class="fas fa-info-circle fa-lg"></i>
                        </div>
                        <div>
                            <span class="text-muted small d-block fw-bold">RECORD DATE</span>
                            <span class="fw-800 text-dark">@Model.Date?.ToString("MMMM dd, yyyy")</span>
                        </div>
                    </div>

                    <form asp-action="RaiseDispute" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="mb-4">
                            <label class="form-label fw-bold h5 mb-3">Reason for Dispute</label>
                            <textarea name="reason" class="form-control form-control-modern" rows="4" required autofocus placeholder="Tell us what the issue is..."></textarea>
                            <p class="text-muted small mt-2">Example: "I was on leave", "Dinner was missed", etc.</p>
                        </div>

                        <div class="d-grid gap-3 mt-4">
                            <button type="submit" class="btn btn-modern btn-submit">
                                <i class="fas fa-paper-plane"></i> Submit Dispute
                            </button>
                            <a asp-action="AttendanceHistory" class="btn btn-modern btn-cancel">
                                <i class="fas fa-times-circle"></i> Cancel Dispute
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
