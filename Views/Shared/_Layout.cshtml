<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mess Management System</title>
    <!-- Modern Typography -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/mess_management.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-utensils"></i> Mess Management
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity?.IsAuthenticated == true && User.HasClaim("isAdmin", "true"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-shield-halved"></i> Admin Panel
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="Index"><i class="fas fa-gauge-high"></i> Dashboard</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="AspNetUser" asp-action="Index"><i class="fas fa-users"></i> Users</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="WeeklyMenu" asp-action="Index"><i class="fas fa-utensils"></i> Weekly Menus</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="TeacherAttendance" asp-action="Index"><i class="fas fa-calendar-check"></i> Attendance</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="TeacherAttendance" asp-action="Disputes"><i class="fas fa-triangle-exclamation"></i> Manage Disputes</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="MonthlyBill" asp-action="Index"><i class="fas fa-file-invoice-dollar"></i> Bills</a></li>
                                </ul>
                            </li>
                        }
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Teacher" asp-action="Dashboard">
                                    <i class="fas fa-chalkboard-user"></i> Teacher Portal
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item d-flex align-items-center">
                                <span class="nav-link disabled text-light opacity-75">
                                    <i class="fas fa-circle-user"></i> @User.Identity.Name
                                </span>
                            </li>
                            <li class="nav-item ms-lg-2">
                                <a class="nav-link btn btn-outline-danger border-0 hover-opacity" asp-controller="Account" asp-action="Logout">
                                    <i class="fas fa-right-from-bracket"></i> Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="@(ViewData["ContainerClass"] ?? "container")">
        <main role="main" class="pb-3 position-relative">
            @if ((ViewContext.RouteData.Values["controller"]?.ToString() != "Home" || ViewContext.RouteData.Values["action"]?.ToString() != "Index") 
                 && (ViewData["HideBackButton"] as bool? != true))
            {
                <div class="position-absolute top-0 end-0 mt-2 me-3" style="z-index: 1000;">
                    <a href="javascript:history.back()" class="btn btn-light shadow-sm border rounded-pill px-3">
                        <i class="fas fa-arrow-left me-2"></i> Back
                    </a>
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1100;">
                    <div class="toast show align-items-center text-white bg-success border-0 shadow-lg" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="true" data-bs-delay="5000">
                        <div class="d-flex">
                            <div class="toast-body fs-6">
                                <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                            </div>
                            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                        </div>
                    </div>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1100;">
                    <div class="toast show align-items-center text-white bg-danger border-0 shadow-lg" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="true" data-bs-delay="8000">
                        <div class="d-flex">
                            <div class="toast-body fs-6">
                                <i class="fas fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
                            </div>
                            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                        </div>
                    </div>
                </div>
            }
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Auto-initialize and auto-hide Bootstrap toasts
        document.addEventListener('DOMContentLoaded', function () {
            var toastElList = [].slice.call(document.querySelectorAll('.toast'));
            toastElList.forEach(function (toastEl) {
                var toast = new bootstrap.Toast(toastEl, {
                    autohide: true,
                    delay: parseInt(toastEl.dataset.bsDelay) || 5000
                });
                toast.show();
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
