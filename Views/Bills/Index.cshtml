@model IEnumerable<mess_management.Models.Bill>

@{
    ViewData["Title"] = "Bills Management";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1"><i class="fas fa-file-invoice-dollar text-primary me-2"></i>Bills Management</h2>
            <p class="text-muted mb-0">Review and manage teacher monthly bills and payments.</p>
        </div>
    </div>

    @if (TempData["GeneratedReport"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Bill Generation Report:</strong>
            <pre class="mb-0 mt-2" style="white-space: pre-wrap; font-size: 0.9rem;">@TempData["GeneratedReport"]</pre>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3 border-0 text-muted small text-uppercase fw-bold">Teacher / Period</th>
                        <th class="py-3 border-0 text-muted small text-uppercase fw-bold text-center">Total Due</th>
                        <th class="py-3 border-0 text-muted small text-uppercase fw-bold text-center">Status</th>
                        <th class="pe-4 py-3 border-0 text-muted small text-uppercase fw-bold text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var b in Model.OrderByDescending(x => x.Year).ThenByDescending(x => x.Month))
                    {
                        <tr>
                            <td class="ps-4 py-4">
                                <div class="d-flex align-items-center">
                                    <div class="avatar-sm bg-primary-soft text-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px; background: rgba(99, 102, 241, 0.1);">
                                        <i class="fas fa-user-tie"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0 fw-bold">@b.Teacher?.Email</h6>
                                        <small class="text-muted">@b.Year / @b.Month.ToString("D2")</small>
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">
                                <span class="fw-bold text-dark">Rs. @b.TotalDue.ToString("N2")</span>
                            </td>
                            <td class="text-center">
                                @if (b.Status == "Paid")
                                {
                                    <span class="badge rounded-pill bg-success-soft text-success px-3 py-2 border border-success border-opacity-25" style="background: rgba(16, 185, 129, 0.1);">
                                        <i class="fas fa-check-circle me-1"></i> Paid
                                    </span>
                                }
                                else if (b.Status == "Pending")
                                {
                                    <span class="badge rounded-pill bg-warning-soft text-warning px-3 py-2 border border-warning border-opacity-25" style="background: rgba(245, 158, 11, 0.1);">
                                        <i class="fas fa-clock me-1"></i> Pending
                                    </span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-info-soft text-info px-3 py-2 border border-info border-opacity-25" style="background: rgba(6, 182, 212, 0.1);">
                                        @b.Status
                                    </span>
                                }
                            </td>
                            <td class="pe-4 text-end">
                                <a class="btn btn-sm btn-outline-primary rounded-pill px-3 hover-up" asp-action="Details" asp-route-id="@b.Id">
                                    <i class="fas fa-eye me-1"></i> View Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .hover-up:hover { transform: translateY(-2px); transition: all 0.2s ease; }
</style>