@model IEnumerable<mess_management.Models.MonthlyBill>

@{
    ViewData["Title"] = "Monthly Bills";
    ViewData["HideBackButton"] = true;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-file-invoice-dollar"></i> Monthly Bills</h1>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Create New</a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Teacher</th>
                        <th>Period</th>
                        <th>Food</th>
                        <th>Water</th>
                        <th>Prev. Due</th>
                        <th>Total Due</th>
                        <th>Paid</th>
                        <th>Status</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td class="ps-4 fw-bold">
                            @(item.Teacher?.FullName ?? item.Teacher?.Email)
                        </td>
                        <td>
                            @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(item.Month ?? 1) @item.Year
                        </td>
                        <td>Rs. @((item.FoodAmount ?? 0).ToString("N0"))</td>
                        <td>Rs. @((item.WaterShare ?? 0).ToString("N0"))</td>
                        <td class="text-muted">Rs. @((item.PreviousDue ?? 0).ToString("N0"))</td>
                        <td class="fw-bold text-primary">Rs. @((item.TotalDue ?? 0).ToString("N0"))</td>
                        <td class="text-success">Rs. @((item.PaidAmount ?? 0).ToString("N0"))</td>
                        <td>
                            <span class="badge @(item.Status == "Paid" ? "bg-success" : (item.Status == "Partial" ? "bg-info" : "bg-warning text-dark"))">
                                @item.Status
                            </span>
                        </td>
                        <td class="text-end pe-4">
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary" title="Edit"><i class="fas fa-edit"></i></a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" title="Details"><i class="fas fa-info-circle"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Delete"><i class="fas fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
            }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary px-4">
        <i class="fas fa-arrow-left me-2"></i> Back to Dashboard
    </a>
</div>
